<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <link href="cards.css" rel="stylesheet"/>
</head>
<body>

{{$class := .Class}}
{{range .Spells}}
<div class="card {{.School}}">
    <h1>{{.Name}}</h1>

    <div class="level">
        <div class="class">{{$class}}</div>
        <div class="number">{{.Level}}</div>
    </div>
    <div class="right-column">
        {{range .Components}} 
        <div class="component">
            <img src="img/{{.Image}}.svg">
            <figcaption>{{.Name}}</figcaption>
        </div>
        <div class="clear"></div>
        {{end}}
        {{if .AreaImg}}
        <img src="img/{{.AreaImg}}" class="area"/>
        {{end}}
    </div>

    <h3 class="descriptor {{.Descriptor}}">
        {{or .Effect .Descriptor "см. описание"}}
    </h3>
    <h3 class="casting-time">{{.CastTime}}</h3>
    <h3 class="duration">{{.Duration}}</h3>

    <h2>Дистанция</h2>
    <p class="range">{{.Range}}</p>

    {{if .Area}}
    <h2>Площадь</h2>
    <p class="area">{{.Area}}</p>
    {{end}}

    <h2>Описание</h2>
    <div class="description">{{.Description}}</div>
</div>
{{end}}

</body>
</html>
